@model CreditRiskAnalysisApp.Models.User

<h2>Create New User</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" autocomplete="off" class="form-control input-short" required" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>NRIC</label>
        <input asp-for="NRIC" autocomplete="off" class="form-control input-short" required />
        <span asp-validation-for="NRIC" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" autocomplete="off" class="form-control input-short" required" required type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success mt-1">Create</button>
    <a asp-action="Index" class="btn btn-secondary mt-1">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}