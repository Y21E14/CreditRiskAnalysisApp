@model CreditRiskAnalysisApp.Models.User

<h2>Create New User</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>NRIC</label>
        <input asp-for="NRIC" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" required type="email" />
    </div>
    <button type="submit" class="btn btn-success mt-1">Create</button>
    <a asp-action="Index" class="btn btn-secondary mt-1">Cancel</a>
</form>
