<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Credit Risk Analysis Application</title>

    <!-- Styles -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" asp-append-version="true" rel="stylesheet" />

    <style>
        body {
            display: flex;
            height: 100vh; /* Full viewport height */
            margin: 0;
            overflow: hidden; /* Prevent unnecessary scrollbars */
        }

        /* Sidebar styles */
        .sidebar {
            background-color: #342a40; /* Dark grey */
            color: white;
            width: 250px;
            padding: 15px 0;
            display: flex;
            flex-direction: column;
            height: 100%; /* full height side bar */
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                padding: 10px 20px;
                display: block;
            }

                .sidebar a:hover {
                    background-color: #495057; /* Lighter grey on hover */
                }

            .sidebar .active {
                background-color: #28a745; /* Green for active item */
                font-weight: bold;
            }

        /* Content area */
        .content {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
        }

    </style>
</head>
<body>
    <!-- Sidebar -->
   <div class="sidebar">
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CreditRiskAnalysisApp</a>
    <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
    <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "AnalysisForm" && ViewContext.RouteData.Values["action"]?.ToString() == "InputForm" ? "active" : "")" asp-area="" asp-controller="AnalysisForm" asp-action="InputForm">Predict Company Credit Risk</a>
    <hr /> <!-- Separator for better organization -->
        <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "User" ? "active" : "")" asp-controller="User" asp-action="Index">Manage Users</a>
        <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Company" ? "active" : "")" asp-area="" asp-controller="Company" asp-action="Index">Manage Companies</a>
    <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Status" ? "active" : "")" asp-area="" asp-controller="Status" asp-action="Index">Manage Loan Status</a>


</div>


    <!-- Main Content -->
    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <!-- <footer class="border-top footer text-muted">
    </footer> -->

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


    @RenderSection("Scripts", required: false)
</body>

<style>
    .input-short {
        width: 300px; /* Adjust the width to your preference */
        max-width: 100%; /* Ensures it doesn't exceed the container */
    }
</style>

</html>
